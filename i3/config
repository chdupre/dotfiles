# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

mode "ms" {
        # These bindings are for when RDP to a windows server
        # most bindings are disabled.

bindsym $mod+1 workspace $workspace1, mode "default"
bindsym $mod+2 workspace $workspace2, mode "default"
bindsym $mod+3 workspace $workspace3, mode "default"
bindsym $mod+4 workspace $workspace4, mode "default"
bindsym $mod+5 workspace $workspace5, mode "ms"
